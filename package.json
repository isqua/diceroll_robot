{
  "name": "diceroll_robot",
  "version": "0.0.1",
  "description": "Telegram bot for generating random answer",
  "private": true,
  "main": "./build/index.js",
  "scripts": {
    "clean": "rimraf {build,*.tsbuildinfo}",
    "compile": "tsc -b .",
    "compile:watch": "tsc -b -w .",
    "build": "npm run clean && npm run compile",
    "dev": "npm run build && npm-run-all --parallel compile:watch nodemon",
    "nodemon": "nodemon",
    "start": "node build/index.js",
    "test": "jest -c .config/jest.config.ts --forceExit --detectOpenHandles"
  },
  "keywords": [
    "telegram"
  ],
  "author": "isqua <isqua@isqua.ru>",
  "license": "ISC",
  "dependencies": {
    "telegraf": "4.8.6"
  },
  "devDependencies": {
    "@jest/globals": "28.1.3",
    "@jest/types": "28.1.3",
    "@types/node": "16",
    "fast-check": "3.1.1",
    "jest": "28.1.3",
    "nock": "13.2.9",
    "nodemon": "2.0.19",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "typegram": "3.10.0",
    "typescript": "4.7.4"
  },
  "nodemonConfig": {
    "watch": [
      "build"
    ],
    "delay": 1,
    "signal": "SIGINT",
    "ext": "js",
    "exec": "npm start"
  }
}
